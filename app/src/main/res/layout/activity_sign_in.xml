<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mobile.thesis.aleksnader.thesis_android.SignInActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Email"
            android:ems="15"
            android:id="@+id/emailInput" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="7dp" android:layout_marginTop="0dp" app:layout_constraintTop_toBottomOf="@+id/SignInTitle" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintVertical_bias="0.19"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Hasło"
            android:ems="15"
            android:id="@+id/passwordInput" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/emailInput" android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/emailInput"/>
    <Button
            android:text="Przejdź dalej"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SignInButton" android:layout_marginRight="0dp" app:layout_constraintRight_toRightOf="@+id/passwordInput"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/passwordInput"/>
    <TextView
            android:text="Zaloguj się"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/SignInTitle" android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" app:layout_constraintVertical_bias="0.17000002" app:layout_constraintHorizontal_bias="0.504"
    />
    <TextView
            android:text="Stworzone przez: Aleksander Małkowicz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createdByText" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp" android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
            android:text="Zarejestruj się"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openRegistrationViewButton"
            app:layout_constraintTop_toTopOf="@+id/SignInButton" android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp" app:layout_constraintLeft_toLeftOf="@+id/passwordInput"/>
</android.support.constraint.ConstraintLayout>
